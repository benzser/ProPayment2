<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/bg"
    tools:context="com.example.jaruwatsukhamjohn.propayment.Debt">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_above="@+id/debtListview">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="@string/billper"
            android:layout_weight="1"
            android:id="@+id/textview9"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            android:gravity="right"
            android:text="Summary"
            android:layout_weight="1"
            android:id="@+id/totaldebtamount"
            android:textColor="@color/red"/>
    </LinearLayout>

    <ListView
        android:id="@+id/debtListview"
        android:layout_width="fill_parent"
        android:layout_height="430dp"
        android:scrollingCache="false"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/AddDebtbutton" />
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@android:drawable/btn_default"
        android:drawableTop="@android:drawable/ic_input_add"
        android:id="@+id/AddDebtbutton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
